
echo off

echo .

echo "---------- 删除当前目录以及子目录所有Build 目录 -------------"

echo "---------- 删除整个项目的 build 目录中 ----------------------"

rd /s/q build

echo "---------- 删除子模块下的 build 目录中 ----------------------"

for /d %%i in (*) do (
@echo "-------- 正在删除 " %%i\build " 目录中-----------------------"
rd /s/q %%i\build
)

echo "---------------------- 删除完成 ----------------------------"

pause
